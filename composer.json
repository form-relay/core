{
  "name": "form-relay/core",
  "type": "library",
  "description": "FormRelay is a data distribution framework.",
  "keywords": [
    "framework",
    "form",
    "data",
    "submission",
    "relay"
  ],
  "homepage": "https://www.mediatis.de",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Michael VÃ¶hringer",
      "role": "Developer"
    },
    {
      "name": "Meelis Karulin",
      "role": "Developer"
    },
    {
      "name": "Damian Ickler",
      "role": "Developer"
